# Server
PORT=4000
CORS_ORIGIN=http://localhost:5173

# Supabase (Project Settings > API)
SUPABASE_URL=YOUR_SUPABASE_URL
# If uploads are done with anon key, ensure storage policies allow it (less secure)
SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY
# Recommended for server-side uploads (more secure); do NOT expose to frontend
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY

# Supabase Storage
# Make sure the bucket exists in Supabase > Storage > Buckets
SUPABASE_STORAGE_BUCKET=uploads
